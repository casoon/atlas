{
  "name": "casoon-atlas",
  "version": "0.0.1",
  "description": "CASOON Atlas - A comprehensive, modern UI effects library built for Tailwind v4",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "volta": {
    "node": "24.11.0",
    "pnpm": "9.15.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/atlas.git"
  },
  "homepage": "https://github.com/casoon/atlas#readme",
  "bugs": {
    "url": "https://github.com/casoon/atlas/issues"
  },
  "author": {
    "name": "JÃ¶rn Seidel",
    "email": "joern.seidel@casoon.de",
    "url": "https://www.casoon.de"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r --parallel dev",
    "demo": "cd demo && pnpm dev",
    "demo:build": "pnpm build && cd demo && pnpm build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "pnpm -r typecheck",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@changesets/cli": "^2.29.7",
    "@testing-library/dom": "^10.4.1",
    "@vitest/ui": "^4.0.9",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.9"
  }
}
